<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:layout_marginLeft="7dp"
   android:layout_marginRight="7dp"
     >
    
    
    
    
     <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:id="@+id/cv"
       android:layout_marginTop="8dp"
      >
    
    <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#ffffff"
    >
    
        
    <ImageView 
        android:id="@+id/productimagelist"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:src="@drawable/backicon"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/productlisttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/productimagelist"
        android:text="simple text" 
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/productlisttext"
        android:layout_marginRight="22dp"
        android:background="@drawable/wishlist" />

    <TextView
        android:id="@+id/tvspecialprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvpricelist"
        android:layout_below="@+id/tvpricelist"
        android:text="Specialprice"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvpricelist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignLeft="@+id/productlisttext"
        android:text="Price"
        android:textColor="#000000"
        android:textStyle="bold" />

</RelativeLayout>

    </android.support.v7.widget.CardView>

