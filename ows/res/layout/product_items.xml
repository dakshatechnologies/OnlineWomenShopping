<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.example.neww"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:cardElevation="3sp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff" >

            <ImageView
                android:id="@+id/productimagelist"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:padding="5dp"
                android:src="@drawable/backicon" />

            <TextView
                android:id="@+id/productlisttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:layout_marginLeft="5dp"
                android:maxWidth="200dp"
                android:layout_toRightOf="@+id/productimagelist"
                android:text="simple text"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="7dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/wishlist" />

            <TextView
                android:id="@+id/tvspecialprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/productimagelist"
                android:layout_below="@+id/tvpricelist"
                android:layout_marginLeft="5dp"
                android:text="Specialprice"
                android:textColor="#000000"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:id="@+id/tvpricelist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/productlisttext"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/productimagelist"
                android:text="Price"
                android:textColor="#000000"
                android:layout_marginTop="2dp"
                 />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>